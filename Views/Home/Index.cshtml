@{
    ViewData["Title"] = "Home Page";
}
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }

    .home-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: url('/images/shutterstockProxima-Studio_1932365063-696x392.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 800px;
        padding: 0 20px;
    }

    .welcome-title {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .welcome-subtitle {
        font-size: 1.5rem;
        margin-bottom: 40px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .role-buttons {
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .role-btn {
        padding: 15px 40px;
        font-size: 1.2rem;
        border: none;
        border-radius: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        cursor: pointer;
    }

        .role-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.2);
        }

    .btn-employee {
        background-color: #2196F3;
        color: white;
    }

    .btn-farmer {
        background-color: #4CAF50;
        color: white;
    }
</style>

<div class="home-background">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="welcome-title">Agri-Connect</h1>
        <p class="welcome-subtitle">Your one-stop shop for a green tomorrow</p>
        <form asp-controller="Home" asp-action="SelectRole" method="post">
            <div class="role-buttons">
                <button type="submit" name="role" value="Employee" class="role-btn btn-employee">Employee</button>
                <button type="submit" name="role" value="Farmer" class="role-btn btn-farmer">Farmer</button>
            </div>
        </form>
    </div>
</div>