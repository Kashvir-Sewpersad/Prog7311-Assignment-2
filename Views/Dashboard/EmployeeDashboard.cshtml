@model Prog7311_Assignment_2.Controllers.EmployeeDashboardViewModel
@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<style>
    /* Image background styling */
    .image-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1; /* Place image behind content */
    }

    /* Adjust container for readability over image */
    .container {
        background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background for readability */
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    /* Ensure table and form elements are readable */
    .table, .form-group label, h2, h3 {
        color: #333; /* Darker text for contrast */
    }

    /* Fallback background color in case image doesn't load */
    .image-background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #f8f9fa; /* Fallback background color */
        z-index: -2;
    }
</style>

<!-- Image background with fallback -->
<div class="image-background-container">
    <img class="image-background" src="/images/DUCKS.webp" alt="Duck Background">
</div>

<div class="container">
    <h2>Employee Dashboard</h2>

    <h3>Add New Farmer</h3>
    @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <form asp-controller="Dashboard" asp-action="AddFarmer" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Surname</label>
            <input type="text" name="surname" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="username" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success mt-2">Add Farmer</button>
    </form>

    <h3>Filter Products</h3>
    <form asp-controller="Dashboard" asp-action="FilterProducts" method="get">
        <div class="form-group">
            <label>Category</label>
            <input type="text" name="category" class="form-control" />
        </div>
        <div class="form-group">
            <label>Start Date</label>
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="form-group">
            <label>End Date</label>
            <input type="date" name="endDate" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Filter</button>
    </form>

    <h3>Products</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Farmer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                var farmer = Model.Farmers.FirstOrDefault(f => f.Id == product.FarmerId);
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                    <td>@(farmer?.Name ?? "Unknown")</td>
                </tr>
            }
        </tbody>
    </table>
</div>